{
  "env": {
    "browser": true,
    "node": true,
    "jest": true
  },
  "extends": "airbnb",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "arrow-parens": ["error", "always"],
    "comma-dangle": ["error", "never"],
    "import/extensions": ["error", {
      "ignore": ["^~"]
    }],
    "import/no-unresolved": ["error", {
      "ignore": ["^~"]
    }],
    "react/jsx-filename-extension": ["error", {
      "extensions": [".js", ".jsx"]
    }]
  }
}
